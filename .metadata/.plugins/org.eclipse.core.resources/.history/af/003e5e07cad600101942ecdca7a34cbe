package pe.edu.certus.rescatybackend.controller;


import io.swagger.v3.oas.annotations.Operation;
import io.swagger.v3.oas.annotations.tags.Tag;
import io.swagger.v3.oas.annotations.Parameter;
import io.swagger.v3.oas.annotations.responses.ApiResponse;
import io.swagger.v3.oas.annotations.responses.ApiResponses;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.*;
import pe.edu.certus.rescatybackend.dto.SolicitudAdopcionRequest;
import pe.edu.certus.rescatybackend.model.SolicitudAdopcion;
import pe.edu.certus.rescatybackend.service.SolicitudAdopcionService;

import java.util.List;
import java.util.Map;

@RestController
@RequestMapping("/api/adopciones")
@CrossOrigin("*")
@Tag(name = "Adopciones", description = "Endpoints para gestionar solicitudes de adopción")
public class SolicitudAdopcionController {

    private final SolicitudAdopcionService service;

    public SolicitudAdopcionController(SolicitudAdopcionService service) {
        this.service = service;
    }
    
    @Operation(
            summary = "Crear una solicitud de adopción",
            description = "Crea una nueva solicitud de adopción para una mascota específica."
    )
    @ApiResponses({
            @ApiResponse(responseCode = "200", description = "Solicitud creada correctamente"),
            @ApiResponse(responseCode = "400", description = "Datos inválidos"),
            @ApiResponse(responseCode = "401", description = "No autorizado")
    })
    
    @PostMapping
    public SolicitudAdopcion crear(@RequestBody SolicitudAdopcionRequest req) {
        return service.registrar(req);
    }

    @GetMapping
    public List<SolicitudAdopcion> listar() {
        return service.listar();
    }

    @GetMapping("/{id}")
    public SolicitudAdopcion obtener(@PathVariable Long id) {
        return service.obtener(id);
    }

    @GetMapping("/usuario/{userId}")
    public List<SolicitudAdopcion> listarPorUsuario(@PathVariable Long userId) {
        return service.listarPorUsuario(userId);
    }

    @PutMapping("/{id}/estado")
    public ResponseEntity<?> actualizarEstado(
            @PathVariable Long id,
            @RequestBody Map<String, String> body) {

        String nuevoEstado = body.get("estado");

        if (nuevoEstado == null || nuevoEstado.isBlank()) {
            return ResponseEntity.badRequest().body("El estado es obligatorio");
        }

        SolicitudAdopcion actualizada = service.actualizarEstado(id, nuevoEstado);

        if (actualizada == null) {
            return ResponseEntity.status(404).body("Solicitud de adopción no encontrada");
        }

        return ResponseEntity.ok(
                Map.of(
                        "mensaje", "Estado actualizado correctamente",
                        "estado", actualizada.getEstado()
                )
        );
    }


    @DeleteMapping("/{id}")
    public void eliminar(@PathVariable Long id) {
        service.eliminar(id);
    }
}
